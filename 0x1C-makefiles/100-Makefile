# -*- Makefile -*-

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o) 
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

school: $(OBJ) m.h
	$(CC) $(OBJ) -o $(NAME)

.PHONY: clean
clean:
	$(RM) -f $(NAME) *~

.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

.PHONY: fclean
fclean: clean oclean

.PHONY: re
re: fclean all
