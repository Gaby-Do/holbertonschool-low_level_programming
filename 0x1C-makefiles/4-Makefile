# -*- Makefile -*-

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o) 
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

school: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) -f $(NAME) *~

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f $(NAME) *~ $(OBJ)

re:
	$(RM) -f $(NAME) *~ $(OBJ)
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)
